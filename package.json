{
  "name": "contract-management-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/cloud-sdk-vdm-sales-contract-service": "^2.1.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-customers": "cds watch --open contractmanagement.customers.customers/index.html?sap-ui-xx-viewCache=false --livereload false",
    "run-contracts": "cds run --port 4004",
    "watch-assessments": "cds watch --open contractmanagement.assessments.assessments/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/customers",
    "app/contracts",
    "app/assessments"
  ],
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "ui5-app",
          "src": "app/contracts",
          "dest": "app/contracts/dist",
          "options": {
            "ui5": {
              "minify": true
            }
          }
        }
      ]
    },
    "requires": {
      "ui5": {
        "app/contracts": {
          "serve": {
            "path": "/contractmanagement.contracts.contracts",
            "src": "app/contracts/dist"
          }
        }
      }
    }
  }
}
